<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.text.Text?>

<?import javafx.scene.layout.HBox?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="isen.quiz.view.DeleteController">
    <Text>Enter the ID of person to DELETE</Text>
    <TextField fx:id="idField" promptText="Enter the ID of person to DELETE"/>
    <style>-fx-font-family: 'Century Gothic'; -fx-font-weight: bold; -fx-font-size: 15px;</style>
    <HBox spacing="20" alignment="CENTER" style="-fx-padding: 10px;">
        <Button text="Delete Person"
                onAction="#deletePerson"
                prefHeight="40.0" prefWidth="200.0"/>
        <Button id="BackButton"
                mnemonicParsing="false"
                onAction="#goBack"
                prefHeight="40.0" prefWidth="200.0"
                text="Back"/>
    </HBox>
</VBox>