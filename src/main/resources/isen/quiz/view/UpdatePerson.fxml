<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="isen.quiz.view.UpdateController">

    <Label text="ID:" layoutX="50" layoutY="20"/>
    <TextField fx:id="idField" layoutX="150" layoutY="20" promptText="ID"/>

    <Label text="Last Name:" layoutX="50" layoutY="20"/>
    <TextField fx:id="lastNameField" layoutX="150" layoutY="20" promptText="Enter last name"/>

    <Label text="First Name:" layoutX="50" layoutY="70"/>
    <TextField fx:id="firstNameField" layoutX="150" layoutY="70" promptText="Enter first name"/>

    <Label text="Nickname:" layoutX="50" layoutY="120"/>
    <TextField fx:id="nickNameField" layoutX="150" layoutY="120" promptText="Enter nickname"/>

    <Label text="Phone Number:" layoutX="50" layoutY="170"/>
    <TextField fx:id="phoneNumberField" layoutX="150" layoutY="170" promptText="Enter phone number"/>

    <Label text="Address:" layoutX="50" layoutY="220"/>
    <TextField fx:id="addressField" layoutX="150" layoutY="220" promptText="Enter address"/>

    <Label text="Email Address:" layoutX="50" layoutY="270"/>
    <TextField fx:id="emailAddressField" layoutX="150" layoutY="270" promptText="Enter email address"/>

    <Label text="Birth Date:" layoutX="300" layoutY="20"/>
    <TextField fx:id="birthDateField" layoutX="400" layoutY="20"/>

    <HBox spacing="20" alignment="CENTER" style="-fx-padding: 10px;">
        <Button text="Update Person" onAction="#updatePerson"/>

        <Button layoutX="300" layoutY="70" onAction="#goBack" text="Back"/>
    </HBox>
</VBox>
